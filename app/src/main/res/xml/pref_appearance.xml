<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="pref_color_primary"
        android:title="@string/theme_primary_color"
        android:persistent="false" />

    <Preference
        android:key="pref_color_accent"
        android:title="@string/theme_accent_color"
        android:persistent="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_subtitle"
        android:summary="@string/pref_subtitle_sum"
        android:title="@string/pref_subtitle" />

    <MultiSelectListPreference
        android:dialogTitle="@string/pref_random_title"
        android:title="@string/pref_random"
        android:hint="@string/pref_random_sum"
        android:key="pref_random"
        android:entries="@array/random_entries"
        android:entryValues="@array/random_values"
        android:defaultValue="@array/random_default" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_hide_donate"
        android:title="@string/pref_hide_donate" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_fab_left"
        android:summary="@string/pref_fab_left_hint"
        android:title="@string/pref_fab_left" />
</PreferenceScreen>